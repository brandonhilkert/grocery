.new-item
  %form{action: "/lists/#{@list}/items", method: "post"}
    %input{name: "name", type: "text", placeholder: "Name", size: "30"}
    %input.btn.btn-primary{name: "commit", type: "submit", value: "Add"}

- if @items.any?
  %ul.items
    - @items.each do |item|
      %li.item
        = item
        .actions.pull-right
          %form{action: "/lists/#{@list}/items", method: "post"}
            %input{name: "_method", type: "hidden", value: "delete"}
            %input{name: "name", type: "hidden", value: item}
            %input.btn.btn-danger.btn-small{type: "submit", value: "Delete"}

          %button.btn.btn-small Cancel